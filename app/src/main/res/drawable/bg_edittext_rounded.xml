<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid fill  -->
    <solid android:color="@color/white"/>

    <!-- 2 dp light-gray stroke -->
    <stroke
        android:width="2dp"
        android:color="#FFDDDDDD"/>

    <!-- Rounded corners (12 dp radius) -->
    <corners android:radius="15dp"/>

    <!-- Extra padding inside (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
