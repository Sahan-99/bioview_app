<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- Illustration -->
    <ImageView
        android:id="@+id/imgNoInternet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/no_internet"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="No Internet Illustration" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No Internet Connection"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/imgNoInternet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please check your internet connection and try again."
        android:textSize="16sp"
        android:textColor="#757575"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Try Again Button -->
    <Button
        android:id="@+id/btnTryAgain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:background="@drawable/btn_rounded"
        app:backgroundTint="@null"
        app:strokeColor="@null"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Exit App Button -->
    <Button
        android:id="@+id/btnExitApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:background="@drawable/btn_rounded"
        app:backgroundTint="@null"
        app:strokeColor="@null"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@id/btnTryAgain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>